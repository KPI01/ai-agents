{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "skill": "allow",
    "codesearch": "allow",
    "websearch": "allow",
    "lsp": "allow",
    "list": "allow",
    "grep": "allow",
    "glob": "allow",
    "task": "allow"
  },
  "agent": {
    "build": {
      "mode": "primary",
      "prompt": "{file:./prompts/build.md}",
      "model": "openai/gpt-5.3-codex",
      "permission": {
        "bash": "ask",
        "read": {
          "*": "allow",
          "*.env": "deny",
          "*.env.*": "deny",
          ".env.example": "allow"
        },
        "edit": {
          "*": "allow",
          "*.env": "deny",
          "*.env.*": "deny",
          ".env.example": "allow"
        },
        "external_directory": "ask"
      }
    },
    "plan": {
      "mode": "primary",
      "prompt": "{file:./prompts/plan.md}",
      "model": "openai/gpt-5.2",
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "read": {
          "*": "allow",
          "*.env": "deny",
          "*.env.*": "deny",
          ".env.example": "allow"
        },
        "external_directory": "ask"
      }
    },
    "review": {
      "mode": "primary",
      "model": "openai/gpt-5.3-codex",
      "prompt": "{file:./prompts/review.md}",
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "read": {
          "*": "allow",
          "*.env": "deny",
          "*.env.*": "deny",
          ".env.example": "allow"
        },
        "external_directory": "ask"
      }
    },
    "doc": {
      "mode": "primary",
      "prompt": "{file:./prompts/doc.md}",
      "model": "openai/gpt-5.2",
      "permission": {
        "edit": {
          "*": "deny",
          "docs/*": "allow"
        },
        "bash": "deny",
        "read": "allow",
        "external_directory": "ask"
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  }
}
